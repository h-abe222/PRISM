# ============================================
# PRISM 環境変数設定
# ============================================
# このファイルを .env.local にコピーして使用してください
# 本番環境の値は GitHub Secrets または Vercel 環境変数で管理

# ============================================
# アプリケーション基本設定
# ============================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=PRISM
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# API設定
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3000/api
API_VERSION=v1
API_TIMEOUT=30000

# ============================================
# データベース設定
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/prism_db
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================
# Redis設定（キャッシュ用）
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# 認証設定
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
SESSION_SECRET=your-session-secret-key-change-this-in-production

# ============================================
# OAuth設定
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# ============================================
# メール設定
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=PRISM <noreply@prism-investment.com>

# ============================================
# AWS設定
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-1
AWS_S3_BUCKET=prism-assets
AWS_CLOUDFRONT_URL=https://d1234567890abc.cloudfront.net

# ============================================
# Stripe決済設定
# ============================================
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_BASIC=price_basic_monthly
STRIPE_PRICE_ID_PRO=price_pro_monthly

# ============================================
# Google Analytics
# ============================================
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# ============================================
# Sentry エラートラッキング
# ============================================
NEXT_PUBLIC_SENTRY_DSN=https://your-key@sentry.io/your-project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=prism-investment
SENTRY_PROJECT=prism-web

# ============================================
# 不動産API連携
# ============================================
REINS_API_KEY=your-reins-api-key
REINS_API_SECRET=your-reins-api-secret
SUUMO_PARTNER_ID=your-suumo-partner-id
SUUMO_API_KEY=your-suumo-api-key

# ============================================
# AI/機械学習設定
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=org-your-org-id
ML_MODEL_ENDPOINT=https://ml.prism-investment.com/predict

# ============================================
# 地図・位置情報
# ============================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-token

# ============================================
# プッシュ通知
# ============================================
FIREBASE_PROJECT_ID=prism-investment
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@prism-investment.iam.gserviceaccount.com

# ============================================
# レート制限
# ============================================
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# セキュリティ
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,https://prism-investment.com
CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval';

# ============================================
# 開発環境用
# ============================================
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_MOCK_API=false
LOG_LEVEL=info

# ============================================
# Vercel設定
# ============================================
VERCEL_URL=
VERCEL_ENV=
VERCEL_GIT_COMMIT_SHA=
VERCEL_GIT_COMMIT_MESSAGE=

# ============================================
# Puppeteer/PDF生成設定
# ============================================
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/tmp/chromium
AWS_LAMBDA_FUNCTION_MEMORY_SIZE=3008